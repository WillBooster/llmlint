{
  "name": "llmlint",
  "version": "0.0.0-semantically-released",
  "description": "A linter powered by LLM",
  "repository": "github:WillBooster/llmlint",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "type": "module",
  "bin": "./bin/llmlint.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "build-ts app",
    "check-all-for-ai": "yarn check-for-ai && yarn test --silent",
    "check-for-ai": "yarn install > /dev/null && yarn format > /dev/null 2> /dev/null || true && yarn lint-fix --quiet && yarn typecheck",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky || true",
    "lint": "eslint --color",
    "lint-fix": "yarn lint --fix",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky || true",
    "prettify": "prettier --cache --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,java,js,json,json5,jsonc,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test{-,/}fixtures/**\"",
    "start": "build-ts run src/index.ts --env .env.local --",
    "start-prod": "yarn build && yarn llmlint",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "langchain": "0.1.37",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/eslint": "8.56.10",
    "@types/node": "24.9.2",
    "@types/yargs": "17.0.32",
    "@willbooster/eslint-config-ts": "11.4.1",
    "@willbooster/prettier-config": "10.2.0",
    "build-ts": "17.0.2",
    "conventional-changelog-conventionalcommits": "9.0.0",
    "eslint": "9.30.1",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-sort-class-members": "1.21.0",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "micromatch": "4.0.8",
    "pinst": "3.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-java": "2.7.1",
    "semantic-release": "23.1.1",
    "sort-package-json": "3.4.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0"
  },
  "packageManager": "yarn@4.9.2",
  "publishConfig": {
    "access": "public"
  }
}
