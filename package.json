{
  "name": "llmlint",
  "version": "0.0.0-semantically-released",
  "description": "A linter powered by LLM",
  "repository": "github:WillBooster/llmlint",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "type": "module",
  "bin": "./bin/llmlint.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "build-ts app",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky",
    "lint": "eslint --color \"./{scripts,src,tests}/**/*.{cjs,cts,js,jsx,mjs,mts,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prettify": "prettier --cache --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,js,json,json5,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "start": "build-ts run src/index.ts --env .env.local --",
    "start-prod": "yarn build && yarn llmlint",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "langchain": "0.1.25",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/eslint": "8.56.5",
    "@types/node": "20.11.25",
    "@types/yargs": "17.0.32",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "@willbooster/eslint-config-ts": "10.5.1",
    "@willbooster/prettier-config": "9.1.2",
    "build-ts": "12.0.10",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-sort-class-members": "1.20.0",
    "eslint-plugin-sort-destructure-keys": "1.5.0",
    "eslint-plugin-unicorn": "51.0.1",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "micromatch": "4.0.5",
    "pinst": "3.0.0",
    "prettier": "3.2.5",
    "semantic-release": "23.0.2",
    "sort-package-json": "2.8.0",
    "typescript": "5.4.2"
  },
  "packageManager": "yarn@4.1.1",
  "publishConfig": {
    "access": "public"
  }
}
